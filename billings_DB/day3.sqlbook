SELECT customer.firstname, customer.lastname, SUM(bill_view.total) AS total, MAX(bill_view.total) AS max
FROM customer
JOIN bill_view ON bill_view.customer_id = customer.id
GROUP BY customer.id
ORDER BY max DESC
LIMIT 3;
